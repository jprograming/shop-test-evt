{% extends 'main.html.twig' %}

{% block title %}
    Detalle articulo
{% endblock %}

{% block content %}
<div class="row">
    <div class="col-lg-5">
        <div class="card mt-3">
            <div class="card-body">
                {{ include('product/_photo.html.twig', {
                    width: 400,
                    height: 400,
                    path: product.photo
                })}}
            </div>
        </div>
    </div>

    <div class="col-lg-7">
        <div class="card mt-3">
            <div class="card-body">

                <h2>{{ product.name }}</h2>
                <h3>{{ product.formattedPrice }}</h3>
                <h4 class="badge badge-success">Disponible</h4>
                <p>
                    {{ product.description }}
                </p>
                <form method="get" action="{{ path('new_order', { productId: product.id}) }}">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Cantidad</label>
                        <input type="number" class="form-control col-2" name="q" value="1" min="1">
                    </div>
                    <button type="submit" class="btn btn-info">Comprar</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}