{% extends 'main.html.twig' %}

{% block title %}Comprar articulo{% endblock %}

{% block content %}

    <h1>Comprar Articulo</h1>


    <div class="row">
        <div class="col-7">
            <div class="card">
                <div class="card-body">
                    {{ form_start(form,{
                        method: 'post',
                        action: path('create_order')
                    }) }}
                    {{ form_errors(form) }}
                    {{ form_widget(form) }}
                    <input type="submit" class="btn btn-info" value="Continuar">
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        <div class="col-5">
            <div class="card">
                <div class="card-body">
                    <h3>{{ detail.product.name }}</h3>
                    {{ include('product/_photo.html.twig', {
                        width: 200,
                        height: 200,
                        path: detail.product.photo
                    })}}
                    <h5>Cantidad: {{ detail.quantity }}</h5>
                    <h5>Precio Unitario: {{ detail.formattedPrice }}</h5>
                    <div>
                        <h4>Total a pagar: {{ order.formattedTotalToPay }}</h4>
                    </div>
                </div>

            </div>
        </div>
    </div>

{% endblock %}
