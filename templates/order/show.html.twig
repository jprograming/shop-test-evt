{% extends 'main.html.twig' %}

{% block title %}Comprar articulo{% endblock %}

{% block content %}

    <h1>Orden generada</h1>


    <div class="row">
        <div class="col-7">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label>Nombre</label>
                        <div class="form-control">
                            {{ order.customer.name }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Nombre</label>
                        <div class="form-control">
                            {{ order.customer.surname }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        <div class="form-control">
                            {{ order.customer.email }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Celular</label>
                        <div class="form-control">
                            {{ order.customer.mobile }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Direcci√≥n domicilio</label>
                        <div class="form-control">
                            {{ order.customer.address }}
                        </div>
                    </div>
                </div>
            </div>

            <form method="post" action="{{ path('request_pay_order', { code: order.code }) }}">
                <button type="submit" class="btn btn-info btn-large">Pagar</button>
            </form>

        </div>

        <div class="col-5">
            <div class="card">
                <div class="card-body">
                    <div>
                        Orden No: <strong>{{ order.code }}</strong>
                    </div>
                    <div>
                        Estado: <strong>{{ order.status }}</strong>
                    </div>
                    <h3>{{ detail.product.name }}</h3>
                    {{ include('product/_photo.html.twig', {
                        width: 200,
                        height: 200,
                        path: detail.product.photo
                    })}}
                    <h5>Cantidad: {{ detail.quantity }}</h5>
                    <h5>Precio Unitario: {{ detail.formattedPrice }}</h5>
                    <div>
                        <h4>Total a pagar: {{ order.formattedTotalToPay }}</h4>
                    </div>
                </div>

            </div>
        </div>
    </div>

{% endblock %}
